<ContentDialog
    x:Class="MatrixJar.SettingsDiag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MatrixCalc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Uid="SettingsDiag"
    Title="Настройки"
    PrimaryButtonText="Сохранить"
    SecondaryButtonText="Отмена"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <StackPanel>
            <TextBlock Margin="0 12" x:Uid="SettingsTheme" Text="Тема оформления" />
            <ComboBox Name="ThemeCombo" MinWidth="200" SelectedIndex="0">
                <ComboBoxItem x:Uid="STSystem" Content="Параметр системы" />
                <ComboBoxItem x:Uid="STDark" Content="Тёмная" />
                <ComboBoxItem x:Uid="STLight" Content="Светлая" />
            </ComboBox>
        </StackPanel>
        <StackPanel>
            <TextBlock Margin="0 12" x:Uid="SettingsFormat" Text="Формат вывода данных" />
            <ComboBox Name="FormatCombo" MinWidth="200" SelectedIndex="0">
                <ComboBoxItem x:Uid="SFShort" Content="Короткий" />
                <ComboBoxItem x:Uid="SFLong" Content="Длинный" />
            </ComboBox>
        </StackPanel>
    </StackPanel>
</ContentDialog>
