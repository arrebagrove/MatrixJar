<ContentDialog
    x:Class="MatrixCalc.SettingsDiag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MatrixCalc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Настройки"
    PrimaryButtonText="Сохранить"
    SecondaryButtonText="Отмена"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <StackPanel>
            <TextBlock Margin="0 12" Text="Тема оформления" />
            <ComboBox Name="ThemeCombo" MinWidth="200" SelectedIndex="0">
                <ComboBoxItem Content="Параметр системы" />
                <ComboBoxItem Content="Тёмная" />
                <ComboBoxItem Content="Светлая" />
            </ComboBox>
        </StackPanel>
        <StackPanel>
            <TextBlock Margin="0 12" Text="Формат вывода данных" />
            <ComboBox Name="FormatCombo" MinWidth="200" SelectedIndex="0">
                <ComboBoxItem Content="Короткий" />
                <ComboBoxItem Content="Длинный" />
            </ComboBox>
        </StackPanel>
    </StackPanel>
</ContentDialog>
